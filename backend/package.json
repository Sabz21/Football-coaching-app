  "description": "Football Coaching Platform API",
  "main": "dist/main.js",
  "scripts": {
    "build": "prisma generate && prisma db push && tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:prod": "node dist/main.js",
